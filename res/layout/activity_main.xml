<com.peony.osg.view.widget.draglayout.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:id="@+id/main_dl"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@drawable/main_back">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp"
            android:paddingTop="50dp">

        <LinearLayout
                android:id="@+id/menu_title_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp">

            <ImageView
                    android:id="@+id/menu_title_iv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_menu_title"/>

            <TextView
                    android:id="@+id/menu_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="@string/app_name"
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/standby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="备用"
                android:textColor="#ffffff"
                android:textSize="15sp"/>

        <ListView
                android:id="@+id/menu_content_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/standby"
                android:layout_below="@id/menu_title_ll"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:textColor="#ffffff"/>
    </RelativeLayout>

    <com.peony.osg.view.widget.draglayout.DragRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee">

        <FrameLayout android:id="@+id/main_fl"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/iv_noimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:text="你的系统相册没有图片哦~"
                android:visibility="gone"/>
    </com.peony.osg.view.widget.draglayout.DragRelativeLayout>

</com.peony.osg.view.widget.draglayout.DragLayout>