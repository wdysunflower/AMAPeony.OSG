<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NoTitle" parent="@android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Portrait" parent="@android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="Theme.Main" parent="@style/StyledIndicators">
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="login_input_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="sign_up_input_text_style">
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
    </style>
</resources>